<?xml version="1.0" encoding="utf-8"?>
<odoo>
		
		<data>
			<record id="view_vidange_tree" model="ir.ui.view">
				<field name="name">gsc.vidange.tree</field>
				<field name="model">gsc.vidange</field>
				<field name="arch" type="xml">
					<tree>
						<field name="voiture_id"/>
						<field name="date_vidange"/>
						<field name="kilometrage"/>
						<field name="montant"/>
						<field name="state"/>

					</tree>
				</field>
			</record>
			
			<record id="view_vidange_form" model="ir.ui.view">
				<field name="name">gsc.vidange.form</field>
				<field name="model">gsc.vidange</field>
				<field name="arch" type="xml">
					<form>
						<header >
							<button name="mark_as_paid" 
									string="Enregistrer un paiement" 
									states="impaye" type="object" 
									class="oe_highlight" 
									/>
							<field name="state" 
									widget="statusbar" 
									statusbar_visible="impaye,paye" />
						</header>
						<sheet>
							
						<group>
							<group string="Informations sur le vidange">
								<field name="voiture_id"/>
								<field name="date_vidange"/>
								<field name="montant"/>
							</group>
							<group string=" Informations sur le kilometrage">
								<field name="kilometrage"/>
								<field name="kilometrage_huile"/>
								
							</group>
							
							

						</group>
						
					</sheet>
					</form>
				</field>
			</record>
			
			
			<record id="gsc_vidange_actw" model="ir.actions.act_window">
				<field name="name">vidange</field>
				<field name="res_model">gsc.vidange</field>
				<field name="view_mode">search,tree,form,graph</field>
				<field name="help" type="html">
					<p class="o_view_nocontent_smiling_face">
						Cliquer sur cr√©er pour Enregistrer un nouveau vidange
					</p> 
				</field>
			</record>
			
			

				
        </data>
</odoo>